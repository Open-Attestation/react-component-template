{
  "name": "@govtechsg/react-component-template",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "module": "build/esm/index.js",
  "types": "build/types/index.d.ts",
  "dependencies": {
    "@babel/runtime-corejs3": "^7.15.4",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^10.0.27",
    "debug": "^4.1.1"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean:build && npm run build:types && npm run build:es && npm run build:umd -- --mode production",
    "build:umd": "webpack",
    "build:es": "babel src --no-babelrc --out-dir build/esm --extensions '.ts,.tsx' --source-maps --config-file ./.es.babelrc",
    "build:types": "tsc --emitDeclarationOnly --declarationDir build/types",
    "clean:build": "rm -rf ./build",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "lint": "eslint . --ext .ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt": "^8.3.5",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@ls-age/commitlint-circle": "1.0.0",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@testing-library/react": "^10.0.3",
    "@types/debug": "4.1.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.16",
    "@types/react": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-jest": "^27.2.0",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-mdx": "^1.15.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.3.1",
    "jest": "^27.2.0",
    "prettier": "^2.0.5",
    "react": "^17.0.2",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "semantic-release": "^17.0.7",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "plugin:mdx/recommended",
      "prettier"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 120
  }
}
